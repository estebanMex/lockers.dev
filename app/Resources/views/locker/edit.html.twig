{% extends 'base.html.twig' %}

{% block fos_user_content %}{% endblock %}

{% block body %}
    <h1>Locker edit</h1>

    <div class="row">
        <div class="col-md-12">
            <ul class="breadcrumb">
                <li>
                    <a href="{{ path('locker_index') }}">Back to the list</a>
                </li>
            </ul>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-3">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" value="Save" class="btn btn-success" />
                    {{ form_end(edit_form) }}
                </div>

                <div class="col-md-3">
                    <h3>Delete </h3>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}